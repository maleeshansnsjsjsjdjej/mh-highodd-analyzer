<script>
/* Live-run Neon version: reads up to 5 time/odd entries and generates two live-style signal cards.
   This is simulation/visualization only.
*/

function getInputs(){
  const times = ['t1','t2','t3','t4','t5'].map(id => document.getElementById(id).value);
  const odds  = ['o1','o2','o3','o4','o5'].map(id => {
    const v = parseFloat(document.getElementById(id).value);
    return isNaN(v) ? null : v;
  });
  const list = [];
  for (let i=0;i<5;i++){
    if (times[i] || odds[i] !== null) list.push({time: times[i] || '--:--', odd: odds[i]});
  }
  return list;
}

function computeSimSignals(list){
  // Filter high odds >=7 (user's screenshot shows 7x-15x ranges)
  const highs = list.filter(r=>typeof r.odd === 'number' && r.odd >= 7).map(r=>r.odd);
  // Use last 3 highs to compute mean
  const last = highs.slice(-3);
  const mean = last.length ? last.reduce((a,b)=>a+b,0)/last.length : (highs.length ? highs.reduce((a,b)=>a+b,0)/highs.length : 12);
  // expected min/max
  let minR = Math.max(6, Math.round(mean*0.6*100)/100);
  let maxR = Math.round(Math.max(mean*1.35, minR+3)*100)/100;

  // confidence heuristic
  let conf = 62;
  if (highs.length >= 3) conf += 20;
  if (last.length >=2) conf += 8;
  // if extremely large values exist, tweak
  if (highs.some(h=>h>=50)) conf -= 8;
  conf = Math.min(99.9, Math.max(60, Math.round(conf)));

  // offsets assume average ~12-16s per round; compute offset seconds (for display)
  const rounds = Math.max(1, Math.round((list.length || 4) / Math.max(1, highs.length || 1)));
  const secPerRound = 14;
  const offsetPrimary = Math.max(4, Math.round((rounds * secPerRound) + 8));
  const offsetBackup = Math.max(3, offsetPrimary - 2);

  // create times (hh:mm)
  function hhmmPlus(sec){
    const d = new Date(); d.setSeconds(d.getSeconds() + sec);
    const hh = String(d.getHours()).padStart(2,'0');
    const mm = String(d.getMinutes()).padStart(2,'0');
    return `${hh}:${mm} [+${sec}s]`;
  }

  const primary = {
    dot: 'üü¢',
    time: hhmmPlus(offsetPrimary),
    range: `${minR} - ${maxR}`,
    conf: `${Math.round(conf)}%+`,
    title: 'Ultra-Prime Signal',
    rule: 'Entry: Direct/Skip 1 ¬∑ Sri Lanka Time',
    offset: offsetPrimary
  };
  const backup = {
    dot: 'üîµ',
    time: hhmmPlus(offsetBackup),
    range: `${Math.max(6, Math.round(minR*0.85*100)/100)} - ${Math.round(maxR*0.95*100)/100}`,
    conf: `${Math.max(70, Math.round(conf-6))}%+`,
    title: 'Prime Backup',
    rule: 'Entry: Skip 1/Direct ¬∑ Sri Lanka Time',
    offset: offsetBackup
  };
  return {primary, backup, highs};
}

function renderCards(sim){
  const wrap = document.getElementById('signals');
  wrap.innerHTML = ''; // clear
  function makeCard(o){
    const el = document.createElement('div');
    el.className = 'sig-card';
    el.innerHTML = `
      <div class="sig-top">
        <div class="sig-left">
          <div class="sig-dot">${o.dot}</div>
          <div>
            <div class="sig-time">${o.time}</div>
            <div class="sig-title">${o.title}</div>
          </div>
        </div>
        <div class="sig-right">
          <div class="sig-range">${o.range}x</div>
          <div class="muted">[+${o.offset}s]</div>
        </div>
      </div>
      <div class="sig-conf">${o.conf}</div>
      <div class="sig-rule">${o.rule}</div>
    `;
    return el;
  }

  wrap.appendChild(makeCard(sim.primary));
  wrap.appendChild(makeCard(sim.backup));
  // animate a glow flash to simulate "live run"
  wrap.querySelectorAll('.sig-card').forEach((c,i)=>{
    c.style.opacity = 0;
    setTimeout(()=>{ c.style.transition='opacity .35s ease'; c.style.opacity=1; }, 80 + i*140);
  });

  // attach save/regenerate buttons handlers
  document.getElementById('saveBtn').onclick = ()=> {
    try {
      localStorage.setItem('mh_last_signals', JSON.stringify({sim, ts:new Date().toISOString()}));
      const note = document.getElementById('savedNotice'); note.style.display='block';
      setTimeout(()=> note.style.display='none',1400);
    } catch(e){}
  };
  document.getElementById('regenBtn').onclick = ()=> {
    // small visual regen
    document.getElementById('analyzeBtn').click();
  };
}

document.getElementById('analyzeBtn').addEventListener('click', ()=>{
  const list = getInputs();
  const sim = computeSimSignals(list);
  document.getElementById('output').style.display = 'block';
  renderCards(sim);
  // persist inputs
  try { localStorage.setItem('mh_last_inputs', JSON.stringify(list)); } catch(e){}
});

// load last inputs/signals
window.addEventListener('load', ()=>{
  try {
    const prev = JSON.parse(localStorage.getItem('mh_last_inputs')||'[]');
    if (prev && prev.length){
      for (let i=0;i<prev.length && i<5;i++){
        if (prev[i].time) document.getElementById('t'+(i+1)).value = prev[i].time;
        if (prev[i].odd !== undefined && prev[i].odd !== null) document.getElementById('o'+(i+1)).value = prev[i].odd;
      }
    }
    const saved = JSON.parse(localStorage.getItem('mh_last_signals')||'null');
    if (saved && saved.sim){
      document.getElementById('output').style.display='block';
      renderCards(saved.sim);
    }
  } catch(e){}
});
</script>
</body>
</html>
